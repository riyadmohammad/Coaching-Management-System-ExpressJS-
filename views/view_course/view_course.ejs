<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coaching Management System</title>
    <link rel="stylesheet" href="assets/fontawesome/css/all.css" />
    <link rel="stylesheet" href="assets/css/bootstrap.css" />
    <link rel="stylesheet" href="assets/css/style.css" />
    <link rel="stylesheet" href="assets/css/responsive.css" />
</head>

<body>
    <section class="nav-section">
        <header class="admin-panel">
            <nav class="nav-design">
                <div class="logo">
                    <h2>Vanila</h2>
                </div>
                <ul>
                    <li>
                        <h5></h5>
                    </li>
                    <li>
                        <a href="" class="btn-primary"><i class="fas fa-bell"></i></a>
                    </li>
                    <li>
                        <a href="index.html" class="n-btn"> Logout </a>
                    </li>
                </ul>
            </nav>
        </header>
    </section>

    <section>
        <div id="wrapper">
            <!-- Sidebar -->
            <div class="sidebar">
                <ul>
                    <li>
                        <i class="fas fa-users"></i> <a href="/dashbord">Profile</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a class="ad-active" href="/create_course">Create Course</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/view_course">View Course</a>
                    </li>
                    <li>
                        <!-- <i class="fas fa-users"></i> <a href="/approve_student">Approve Student</a> -->
                    </li>
                    <li>

                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/student_info">Student Info</a>
                    </li>
                    <li>

                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/notes_upload">Notes Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/notice_upload">Notice Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/mark">Create Marks</a>
                    </li>
                    <li>
                        <i class="fas fa-hands-helping"></i> <a href="/alert_parent">Alert Parents</a>
                    </li>
                </ul>
            </div>

            <div id="content-wrapper">
                <div class="container-fluid">
                    <div class="row justify-content-center text-center">
                        <div class="col-lg-8 mb-4 mr-auto">
                            <h1> Course Details</h1>
                        </div>
                        <div class="col-lg-10">
                            <table class="table table-hover table-primary">
                                <thead class="table-danger">
                                <tr>
                                    <th>COURSE ID</th>
                                    <th>COURSE TYPE</th>
                                    <th>BATCH</th>
                                    <th>Class Day</th>
                                    <th>Class Time</th>
                                    <th>Subject</th>
                                    <th>FEES</th>
                                    <th>ACTION</th>
                                </tr>
                                </thead>
                                <% for(var i=0; i < results.length; i++){ %>
                                <tbody>
                                    <form action="" method="post"> 
                                        <tr>
                                            <th> <input type="text" class="form-control" name="id" id="id" placeholder="" VALUE="<%= results[i].cid %>" readonly ></th>
                                            <th> <input type="text" class="form-control" name="type" id="type" placeholder="" VALUE="<%= results[i].ctype %>" >  </th>
                                            <th>  <input type="text" class="form-control" name="batch" id="batch" placeholder="" VALUE="<%= results[i].batch %>" ></th>
                                            <th><input type="text" class="form-control" name="day" id="day" placeholder="" VALUE="<%= results[i].classday %>"> </th>
                                            <th> <input type="time" class="form-control" name="time" id="time" placeholder="" VALUE="<%= results[i].classtime %>"> </th>
                                            <th> <input type="text" class="form-control" name="subject" id="subject" placeholder="" VALUE="<%= results[i].subject %>"> </th>
                                            <th>   <input type="text" class="form-control" name="fees" id="fees" placeholder="" VALUE="<%= results[i].fees %>"></th>
                                            <th>
                                                <input class="btn btn-warning"type="submit" value="edit" >
                                                <a href="view_course/delete/<%= results[i].cid %>" class="btn btn-danger">Delete</a>
                                                <!-- <input class="btn btn-warning"type="submit" value="Delete" > -->
                                              
                                            </th>
                                        </tr>
                                    </form>
                                    
                                    <%  } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/proper.js"></script>
    <script src="assets/js/bootstrap.js"></script>
</body>

</html>